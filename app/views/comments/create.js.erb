var parentSelector = '<%= @parent.is_a?(Question) ? ".question" : "#answer-#{@parent.id}" %>';
<% if @comment.errors.present? %>
  <% @comment.errors.full_messages.each do |msg| %>
    $('.comments-errors').html('<%= j msg %>');
  <% end %>
<% else %>
  $(parentSelector + " .comments").html('<%= j render "list", parent: @parent %>');
<% end %>
